<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/small_padding">
    <!-- pe parinte layout_height am pus wrap content -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewFrom"
        tools:text="Magda"
        android:textStyle="bold"/>
    <!--ca sa testam codul: tools:text, diferit de android:text-->
    <TextView
        android:paddingTop="@dimen/extra_small_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSubject"
        android:textColor="@color/colorPrimaryDark"
        tools:text="Android Fundamentals"
        />

    <TextView
        android:paddingTop="@dimen/extra_small_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBody"
        tools:text="This is a welcome email...."/>
</LinearLayout>